{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "types": [
      "node"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitThis": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "lib": [
    "es2022",
    "dom",
    "dom.iterable"
  ],
  "include": [
    "vite.config.*",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
